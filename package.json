{
  "name": "sync-slack-bot",
  "version": "1.0.0",
  "description": "Slack bot for crowdsourcing group availability and automatically finding optimal meeting times",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "watch": "tsx watch src/index.ts",
    "pm2:start": "npm run build && pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop sync-slack-bot",
    "pm2:restart": "npm run build && pm2 restart sync-slack-bot",
    "pm2:delete": "pm2 delete sync-slack-bot",
    "pm2:logs": "pm2 logs sync-slack-bot",
    "pm2:status": "pm2 status"
  },
  "keywords": [
    "slack",
    "bot",
    "scheduling",
    "crowdsourcing",
    "availability"
  ],
  "author": "NETS2130 Team",
  "license": "MIT",
  "dependencies": {
    "@slack/bolt": "^3.17.1",
    "@slack/web-api": "^7.0.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
